<div class="container">
    <div class="main-body">

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">

                <!--USER AVATER CARD-->
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4></h4>
                                <p class="text-secondary mb-1">@Model.UserName</p>
                                <p class="text-muted font-size-sm">Tacoma, WA</p>
                                @*<button class="btn btn-outline-primary">Message</button>*@
                            </div>
                        </div>
                    </div>
                </div>


                <!--WHERE SOUNDCLOUD WIDGET WILL GO-->
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                    </ul>
                </div>
            </div>

            <!--RIGHT SIDE-->
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <center>
                            <h1>Contact Info</h1>
                        </center>
                        <br />

                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.FirstName @Model.LastName
                            </div>
                        </div>

                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Email
                            </div>
                        </div>

                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.PhoneNumber
                            </div>
                        </div>

                        <hr>
                    </div>
                </div>

                <!--BOTTOM RIGHT CARD-->
                <div class="col-md-13">
                    <div class="card mb-3">
                        <div class="card-body">
                            <center>
                                <h1>About me</h1>
                                <p>@Model.Email</p>
                            </center>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
